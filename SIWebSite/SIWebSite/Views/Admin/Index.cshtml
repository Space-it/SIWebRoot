@model SIWebSite.WebCore.Models.Person
@{
    ViewBag.Title = "Admin panel";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}
    <div class="row">
        <div class="col-md-4">
            
        </div>
        <div class="col-md-4">
            <div class="alert alert-success" role="alert">
                <a href="#" class="alert-link">Attention! Only secure access!</a>
            </div>
            <br />
            @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "col-md-6", @id = "form_style" }))
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.Login)
                    @Html.TextBoxFor(x => x.Login, new { @type = "text", @class = "form-control", @id = "first_name", @placeholder = "login or email" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Password)
                    @Html.TextBoxFor(x => x.Password, new { @type = "text", @class = "form-control", @id = "last_name", @placeholder = "password" })
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            }
        </div>
        <div class="col-md-4"></div>

    </div>


