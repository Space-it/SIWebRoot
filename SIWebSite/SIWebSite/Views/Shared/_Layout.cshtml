<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/style.css">
    <!-- Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <!-- use:  "font-family: 'Pacifico', cursive;"  -->

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <main id="main">
        <div class="menu_bar">
            <div class="logo">
                <img src="~/Content/Images/circle.png" alt="circle" class="rotate" height="200px" width="200px">

            </div>
            <nav>
                <ul class="menu">
                    <li class="main_menu">
                        <a href="#">About</a>
                        <p>Our team, thinking, and community.</p>
                    </li>
                    <li class="main_menu">
                        <a href="#">Services</a>
                        <p>Get in touch, work with us.</p>
                    </li>
                    <li class="main_menu">
                        <a href="#">Our Work</a>
                        <p>Projects we've worked on.</p>
                    </li>
                    <li class="main_menu">
                        <a href="#">Contacts</a>
                        <p>Get in touch, work with us.</p>
                    </li>

                </ul>
                <a href="#" id="pull"></a>
            </nav>
        </div>
        @RenderBody()
    </main>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
